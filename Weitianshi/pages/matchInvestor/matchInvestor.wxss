page {
  background: #f3f4f8;
  overflow: hidden;
  height: 100%;
}

.blueTop {
  width: 100%;
  height: 140rpx;
  background: #40587a;
}

.publicButton {
  position: absolute;
  top: 88rpx;
  left: 5%;
  width: 80%;
  height: 104rpx;
  background: white;
  border-radius: 52rpx;
  padding: 0 5%;
  /* text-align: center; */
  line-height: 104rpx;
  font-size: 32rpx;
  color: #40587a;
}

.publicButtonTitle {
  margin-left: 38%;
}

.publicButton image {
  width: 28rpx;
  height: 28rpx;
  position: absolute;
  left: 34%;
  top: 36%;
}

.scroll {
  height: 900rpx;
  width: 686rpx;
  margin: auto;
  margin-top: 82rpx;
}

.itemCard {
  background: white;
  margin-bottom: 24rpx;
  padding: 36rpx 22rpx;
}

.cardTop {
  font-size: 24rpx;
  color: #666;
  padding-bottom: 20rpx;
  justify-content: space-between;
  /* border-bottom: 1rpx solid #e6e6e6; */
}
.line{
  width:100%;
  height:2rpx;
  background: #e6e6e6;
}
.cardTop .pushBtn {
  width: 136rpx;
  height: 52rpx;
  background: #40587a;
  color: white;
  font-size: 24rpx;
  line-height: 52rpx;
  margin: 0;
  border-radius: 4rpx;
  padding-left: 0;
  padding-right: 0;
}

.matchInvestor {
  padding-top: 28rpx;
}

.matchInvestor .investorItem {
  width: 25%;
}

.matchInvestor .investorPic {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  background: #f3f4f8;
  line-height: 108rpx;
  text-align: center;
  margin-left: 34rpx;
}

.matchInvestor .investorName {
  font-size: 26rpx;
  color: #333;
  line-height: 26rpx;
  text-align: center;
  margin-top: 18rpx;
}

.matchInvestor .investorBand {
  font-size: 22rpx;
  color: #666;
  line-height: 24rpx;
  text-align: center;
  margin-top: 8rpx;
  width: 152rpx;
  overflow: hidden;
  white-space: nowrap;
}

.projectDetal {
  background: #fafafa;
  border-radius: 4px;
  /* width:320px;
height:81px; */
}

.projectTop {
  justify-content: space-between;
  padding: 24rpx 24rpx;
  padding-bottom: 20rpx;
  margin-top: 28rpx;
}

.projectTop .is_exclusive {
  border: 2rpx solid #40587a;
  border-radius: 4rpx;
  width: 46rpx;
  height: 28rpx;
  color: #40587a;
  font-size: 18rpx;
  line-height: 28rpx;
  text-align: center;
}

.projectTop .projectIntro {
  font-size: 26rpx;
  color: #333;
  width: 518rpx;
  overflow: hide;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.industryArr, .otherTag {
  font-size: 24rpx;
  color: #666;
  padding: 0 24rpx;
}

.otherTag {
  padding: 20rpx 24rpx;
}

.publishTag {
  justify-content: space-between;
}

.publish {
  border-radius: 4rpx;
  width: 46rpx;
  height: 28rpx;
  color: #40587a;
  font-size: 18rpx;
  line-height: 28rpx;
  /* text-align: center; *//* float: right; */
  text-align: right;
  margin-top: 20rpx;
  margin-right: 24rpx;
}

.ProjectDetailInfo {
  /* border-top: 1rpx solid #ccc; */
  background: #fff;
  width: 100%;
  height: 28rpx;
  padding-top: 38rpx;
  color: #ccc;
}

.ProjectDetailInfo .viewTimeNew {
  position: absolute;
  color: #f44c4c;
  top: -12rpx;
  right: 25rpx;
  font-size: 18rpx;
}

.sceenPerson, .applyPerson, .investPerson {
  font-size: 22rpx;
  color: #ccc;
  width: 33%;
  height: 20rpx;
  line-height: 20rpx;
  text-align: center;
  border-right: 1rpx solid #ccc;
  position: relative;
  justify-content: center;
  align-items: center;
}

.sceenPerson:last-child {
  border: none;
}

.screenPersonColor {
  color: #999;
}

.applyProjectNew {
  font-size: 18rpx;
  color: #f44c4c;
  line-height: 18rpx;
  position: absolute;
  left: 170rpx;
  top: -16rpx;
  text-align: center;
}

/*为空的时候的样式  */

.emptyStyle {
  text-align: center;
}

.emptyStyle image {
  width: 438rpx;
  height: 370rpx;
}

.hasNothing {
  font-size: 30rpx;
  color: #666;
  line-height: 30rpx;
  text-align: center;
  margin-bottom: 40rpx;
  margin-top: 210rpx;
}
