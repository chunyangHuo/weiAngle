page {
  background: #f3f4f8;
  overflow: hidden;
  height: 100%;
}

.blueTop {
  width: 100%;
  height: 140rpx;
  background: #40587a;
}

.publicButton {
  position: absolute;
  top: 88rpx;
  left: 5%;
  width: 80%;
  height: 104rpx;
  background: white;
  border-radius: 52rpx;
  padding: 0 5%;
  text-align: center;
  line-height: 104rpx;
}

.publicButton image {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 25%;
  top: 25%;
}

.scroll {
  height: 900rpx;
  width: 686rpx;
  margin: auto;
  margin-top: 82rpx;
}

.itemCard {
  background: white;
  margin-bottom: 24rpx;
  padding: 36rpx 32rpx;
}

.cardTop {
  font-size: 12px;
  color: #666;
  padding: 24rpx 32rpx;
  justify-content: space-between;
}

.cardTop .pushBtn {
  width: 160rpx;
  height: 52rpx;
  background: #40587a;
  color: white;
  font-size: 24rpx;
  line-height: 52rpx;
  margin: 0;
}

.matchInvestor .investorItem {
  width: 25%;
}

.matchInvestor .investorPic {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  background: #f3f4f8;
  line-height: 108rpx;
  text-align: center;
  margin-left: 34rpx;
}

.matchInvestor .investorName {
  font-size: 26rpx;
  color: #333;
  line-height: 26rpx;
  text-align: center;
  margin-top: 18rpx;
}

.matchInvestor .investorBand {
  font-size: 22rpx;
  color: #666;
  line-height: 22rpx;
  text-align: center;
  margin-top: 8rpx;
}
.projectTop{
  justify-content: space-between;
  padding: 24rpx 40rpx;
  margin-top: 28rpx;
}
.projectTop .is_exclusive {
  border: 2rpx solid #40587a;
  border-radius: 4rpx;
  width: 46rpx;
  height: 28rpx;
  color:  #40587a;
  font-size: 18rpx;
  line-height: 28rpx;
  text-align: center;
}
.projectTop .projectIntro{
  font-size: 26rpx;
  color: #333;
  width: 518rpx;
  overflow: hide;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.industryArr, .otherTag{
  font-size: 24rpx;
  color: #666;
  padding: 10rpx 40rpx;
}
.publish {
  border-radius: 4rpx;
  width: 46rpx;
  height: 28rpx;
  color:  #40587a;
  font-size: 18rpx;
  line-height: 28rpx;
  text-align: center;
  float: right;
}

.ProjectDetailInfo {
  border-top: 1rpx solid #ccc;
  background: #fff;
  width: 100%;
  height: 28rpx;
  padding-top: 38rpx;
  color: #ccc;
}
.ProjectDetailInfo .viewTimeNew{
  position: absolute;
  color: #f44c4c;
  top: -12rpx;
  right: 25rpx;
  font-size:18rpx;
}

.sceenPerson, .applyPerson, .investPerson {
  font-size: 22rpx;
  color: #ccc;
  width: 33%;
  height: 20rpx;
  line-height: 20rpx;
  text-align: center;
  border-right: 1rpx solid #ccc;
  position: relative;
  justify-content: center;
  align-items: center;
}
.sceenPerson:last-child{
  border:none;
}

.screenPersonColor {
  color: #999;
}