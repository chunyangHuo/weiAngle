/*tab切换页  */

.swiper-tab {
  width: 88%;
  line-height: 80rpx;
  background: #40587a;
  z-index: 999;
  padding-left: 12%;
}

.swiper-tab-list {
  display: inline-block;
  padding-left: 32rpx;
  padding-right: 32rpx;
  font-size: 30rpx;
  color: #999;
  line-height: 62rpx;
  text-align: center;
  border: none;
}

.on {
  color: white;
  text-align: center;
  font-size: 30rpx;
  line-height: 80rpx;
  border-bottom: 4rpx solid white;
}

.dropDown {
  top: 160rpx;
}

