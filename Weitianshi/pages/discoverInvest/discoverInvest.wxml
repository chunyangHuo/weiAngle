<import src="/pages/Template/Template.wxml" />
<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">投资人</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">FA(融资顾问)</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">我的</view>
</view>
<!--筛选和搜索  -->
<template is='search' data='{{SearchInit}}'></template>
<!--项目展示列表  -->
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:945rpx" bindchange="bindChange">
  <!--投资人  -->
  <swiper-item data-current='0'>
    <scroll-view style="height:100%;" scroll-y="true" bindscrolltolower='loadMore'>
      <template is="resourceProject" data="{{contentList:res_match}}"></template>
    </scroll-view>
    <!--空状态-->
    <image class="empty" src="/img/empty.png" wx:if="{{myProject==''}}"></image>
    <!--模态层  -->
    <view class='t-modal' wx:if='{{SearchInit.currentIndex!=5}}' bindtap='modal'></view>
  </swiper-item>
  <!--FA(融资顾问) -->
  <swiper-item data-current='1'>
    <!--项目展示  -->
    <scroll-view scroll-y="true" bindscrolltolower="financingNeed">
      <template is="resourceProject" data="{{contentList:res_match}}"></template>
    </scroll-view>
    <!--空状态-->
    <view wx:if="{{financingNeed==''}}">
      <image class="empty" src="/img/img-wujieguo@3x.png"></image>
    </view>
    <!--模态层  -->
    <view class='t-modal' wx:if='{{SearchInit.currentIndex!=5}}' bindtap='modal'></view>
  </swiper-item>
  <!--我的  -->
  <swiper-item data-current='2'>
    我的
    <!--空状态-->
    <view wx:if="{{financingNeed==''}}">
      <image class="empty" src="/img/img-wujieguo@3x.png"></image>
    </view>
    <!--模态层  -->
    <view class='t-modal' wx:if='{{SearchInit.currentIndex!=5}}' bindtap='modal'></view>
  </swiper-item>
</swiper>
<!--错误提示-->
<view class="error" wx:if="{{error=='1'}}">{{error_text}}</view>