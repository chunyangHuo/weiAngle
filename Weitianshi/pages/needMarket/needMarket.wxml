<view class="r_nav flex">
  <navigator url="../resource/resource" class="nav_btn">精准对接</navigator>
  <view class="nav_btn nav_on">需求市场</view>
</view>
<view class="swiper-tab">
  <view class="swiper-tab-list  {{currentTab==0 ? 'on' : ''}} my_project" data-current="0" bindtap="swichNav">找资金</view>
  <view class="swiper-tab-list  {{currentTab==1 ? 'on' : ''}} find_project" data-current="1" bindtap="swichNav">找项目</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">资源需求</view>
</view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:88%" bindchange="">

  <!-- 找资金 -->
  <swiper-item>
    <scroll-view scroll-y="true">

      <!--空状态-->
      <view wx:if="{{true}}">
        <image class="empty" src="../../img/empty.png"></image>
      </view>
    </scroll-view>
  </swiper-item>

  <!-- 找项目 -->
  <swiper-item>
    <scroll-view scroll-y="true" bindscrolltolower=''>

      <!--空状态-->
      <view wx:if="{{true}}">
        <image class="empty" src="../../img/empty.png"></image>
      </view>
    </scroll-view>
  </swiper-item>

  <!-- 资源需求 -->
  <swiper-item>
    <scroll-view scroll-y="true" bindscrolltolower=''>

      <!--空状态-->
      <view wx:if="{{true}}">
        <image class="empty" src="../../img/empty.png"></image>
      </view>
    </scroll-view>
  </swiper-item>
</swiper>