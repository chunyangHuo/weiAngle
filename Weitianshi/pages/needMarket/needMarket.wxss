@import "../../weui.wxss";
page{
  height: 100%;
}
scroll-view{
  height: 100%;
}
view {
  font-size: 28rpx;
  color: #333;
}

/*头部*/

.r_nav {
  display: flex;
  text-align: center;
  align-items: baseline;
  background: white;
}

.r_nav .nav_btn {
  color: #999;
  /*width: 106rpx;*/
  height: 46rpx;
  font-size: 30rpx;
  line-height: 46rpx;
  margin-top: 26rpx;
  margin-bottom: 24rpx;
}

.r_nav  .nav_on {
  /*border: 1rpx solid #333;
border-radius: 100rpx;*/
  color: #333;
}

.r_nav .nav_btn:first-child {
  margin-left: 224rpx;
}

.r_nav .nav_btn:nth-child(2) {
  margin-left: 94rpx;
}

.r_nav .nav_email {
  background: red;
  width: 40rpx;
  height: 30rpx;
  margin-left: 160rpx;
}

/*三个选项卡*/

.swiper-tab {
  background: white;
  display: flex;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 68rpx;
}

.swiper-tab-list {
  font-size: 24rpx;
  display: inline-block;
  width: 17%;
  color: #ccc;
  margin: 24rpx 8%;
}

.on {
  color: #333;
  border-bottom: 5rpx solid #333;
  text-align: center;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}


