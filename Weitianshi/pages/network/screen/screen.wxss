/* pages/network/screen/screen.wxss */
page {
  background: white;
}

#doMain {
  padding: 0 32rpx;
}

.context {
  flex-wrap: wrap;
  flex-direction: row;
}

.title {
  font-size: 24rpx;
  text-align: center;
  padding: 32rpx 0;
  color: #666;
}

.tips {
  display: flex;
  font-size: 28rpx;
  margin-bottom: 24rpx;
  border-radius: 8rpx;
  justify-content: center;
  align-content: baseline;
  width: 23%;
  margin-right: 2%;
  color: #999;
  height: 76rpx;
  line-height: 76rpx;
}

.tips view {
  border: 1px solid #999;
  border-radius: 8rpx;
}

.tips .checkedOne {
  border: 1px solid #333;
  color: #fff;
  background: #40587a;
}

.offer view:first-child {
  justify-content: space-between;
}
.search view:first-child{
  justify-content: space-between;
}

.context wx-view:first-child {
  padding-left: 0;
  font-size: 24rpx;
  width: 100%;
  text-align: center;
}

.flex .title:first-child {
  padding-left: 0;
}
