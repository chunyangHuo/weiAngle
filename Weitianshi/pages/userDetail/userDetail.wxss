/* pages/userDetail/userDetail.wxss */
page {
  color: #333;
  width: 100%;
}

/*用户名片*/

.user_info {
  background: white;
  justify-content: space-between;
  padding: 32rpx;
  flex-wrap: wrap;
}

.user_left, .user_right {
  height: 184rpx;
}

.user_left {
  width: 541rpx;
}

.user_right {
  width: 120rpx;
}

.user_down {
  width: 100%;
  margin-top: 32rpx;
}

.user_pic, user_text {
  display: flex;
  flex-direction: column-reverse;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.user_name {
  font-size: 40rpx;
  margin-bottom: 20rpx;
}

.user_career,.user_company{
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

 .user_mobile, .user_email {
  font-size: 20rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.user_popularity, .user_attention, .user_potential {
  width: 120rpx;
  background: #f8f8f8;
  height: 82rpx;
  text-align: center;
  margin-right: 132rpx;
  font-size: 20rpx;
  color: #666;
}

.user_popularity view:first-child, .user_attention view:first-child,
.user_potential view:first-child {
  font-size: 32rpx;
  color: #333;
  height: 40rpx;
}

.user_potential {
  margin-right: 0;
}

/*个人描述*/
.user_intro {
  background: white;
  width: 100%;
}

.grey{
  height: 32rpx;
  background: f8f8f8;
}

.user_intro .intro_title {
  color: #333;
  font-size: 28rpx;
}

.user_intro .intro_content {
  padding: 19rpx;
  background: #f8f8f8;
  font-size: 20rpx;
  height: 132rpx;
  margin-top: 32rpx;
  border-radius: 8rpx;
}

.user_invest_info, .user_resource_info, .user_project_info, .user_invest_case {
  background: white;
  padding: 32rpx;
  margin-bottom: 32rpx;
}
.user_invest_case{
  margin-bottom: 0;
}

.title {
  font-size: 28rpx;
  color: #333;
  justify-content: space-between;
  margin-bottom: 26rpx;
}

.title view {
  font-size: 28rpx;
  color: #333;
}

.title image {
  width: 22rpx;
  height: 22rpx;
}

/*寻找案源*/

.invest_title, .resource_title {
  font-size: 24rpx;
  margin-bottom: 32rpx;
}

.invest_title {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 32rpx;
}

.invest_stage_frame, .invest_scale_frame, .invest_industry_frame,
.res_find_frame, .res_give_frame {
  display: flex;
  margin-bottom: 46rpx;
}

.invest_industry, .invest_stage, .invest_scale, .res_find, .res_give {
  font-size: 20rpx;
  padding: 10rpx 14rpx;
  border: 1px solid #666;
  color: #666;
  border-radius: 8rpx;
  margin-right: 22rpx;
}

.invest_desc {
  padding: 18rpx 24rpx;
  background: #f8f8f8;
  font-size: 20rpx;
  height: 132rpx;
  border-radius: 8rpx;
}

/*资源对接*/

.projcet_info_frame{
  border: 1px solid #e0e0e0;
  border-radius: 8rpx;
  padding: 32rpx;
}

.pro_intro {
  font-size: 28rpx;
  color: #333;
}

.pro_industry_frame {
  width: 100%;
  margin-top: 16rpx;
}

.pro_industry {
  border-right: 1px solid #e0e0e0;
  padding-right:16rpx;
  font-size: 24rpx;
  color: #666;
}
.pro_industry:last-child{
  border: none;
}

.pro_sorts {
  width: 100%;
  margin-top: 20rpx;
}

.pro_sort {
  font-size: 20rpx;
  color: #999;
  border-radius: 8rpx;
  border: 1px solid #e0e0e0;
  text-align: center;
  height: 30rpx;
  line-height: 30rpx;
  padding: 0 16rpx;
  margin-right: 24rpx;
}

/*投资案例*/
.case_name_frame{
  margin-top: 32rpx
}
.case_point{
  width: 16rpx;
  height: 16rpx;
}
.case_name{
  font-size: 28rpx;
  color: #333;
  padding-right: 460rpx;
}
.case_time{
  width: 125rpx;
  height: 28rpx;
  line-height: 28rpx;
  border-radius: 8rpx;
  background: #f2f2f2;
  color: #999;
  font-size: 20rpx;
  text-align: center;
}
