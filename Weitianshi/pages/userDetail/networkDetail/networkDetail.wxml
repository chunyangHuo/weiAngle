<import src="/pages/Template/Template.wxml" />
<view id="my">

  <!--我的名片-->
  <template is="userInfo" data="{{user:user,blue:blue,count:count,text:'加他为人脉'}}"></template>

  <!--个人描述-->
  <template is="userIntro" data="{{user:user}}"></template>

  <!--寻找案源-->
  <template is="InvestInfo" data="{{invest:invest}}"></template>

  <!--资源对接-->
  <template is="resourceInfo" data="{{resource:resource}}"></template>

  <!--他的项目库-->
  <template is="financingProject" data="{{project_info:project_info,text:'他的项目库',canEdit:canEdit}}"></template>

  <!--投资案例-->
  <template is="investProject" data="{{invest_case:invest_case,canEdit:canEdit}}"></template>

  <!--加人脉按钮-->
  <view class="floatBtn flex addPerson" wx:if="{{condition ==1||button_type ==1||button_type ==2}}">
    <button class="addPersonBtn" bindtap="addPerson" >加人脉</button>
  </view>
  <view class="floatBtn flex waitPerson" wx:if="{{condition ==2||button_type == 3}}">
    <button class="waitPersonBtn" style="background: #f2f2f2;color:#cccccc;">待验证</button>
  </view>
  <label wx:if="{{condition == 0}}"></label>
</view>