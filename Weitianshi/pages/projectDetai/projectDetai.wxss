/* pages/projectDetai/projectDetai.wxss */

.projectDetailTop {
  height: 420rpx;
  width: 90%;
  background: #fff;
  box-shadow: 0 8rpx 8rpx 0 rgba(64, 88, 122, 0.10);
  border-radius: 8rpx;
  margin: 32rpx 32rpx 38rpx 36rpx;
}

.projectDetailBox {
  padding: 32rpx 32rpx 0 32rpx;
}

.describle {
  font-size: 32rpx;
  color: #333;
  line-height: 48rpx;
  text-align: left;
}

.projectDetailType {
  border: 2rpx solid #40587a;
  border-left: none;
  width: 104rpx;
  height: 32rpx;
  font-size: 20rpx;
  color: #40587a;
  line-height: 32rpx;
  text-align: right;
}

.circle {
  border: 2rpx solid #40587a;
  width: 4rpx;
  height: 4rpx;
  border-radius: 100%;
  text-align: center;
  margin-top: 10rpx;
}

.industry {
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #666;
  line-height: 26rpx;
  text-align: left;
  margin: 36rpx 0 24rpx 0;
}

.allProjectDetail {
  font-size: 26rpx;
  color: #666;
  line-height: 26rpx;
  text-align: left;
  margin-bottom: 34rpx;
}

.ProjectClues {
  font-family: PingFangSC-Regular;
  font-size: 20rpx;
  color: #ccc;
  line-height: 20rpx;
  text-align: left;
  margin-bottom: 34rpx;
}

.ProjectCluesLine {
  width: 67%;
  height: 2rpx;
  margin: 10rpx 18rpx 0 18rpx;
  font-size: 0;
  background: #e6e6e6;
}

.ProjectDetailInfo {
  border-top: 2rpx solid #ccc;
  background: #fff;
  width: 100%;
  height: 20rpx;
  font-size: 20rpx;
  color: #ccc;
  line-height: 20rpx;
  text-align: left;
}

.sceenPerson, .applyPerson, .investPerson {
  margin:38rpx 32rpx 30rpx 26rpx;
  font-size: 20rpx;
  color: #ccc;
  width:33%;
  height:20rpx;
  line-height: 20rpx;
  text-align: left;
  border-right:1px solid #cccccc;
}
