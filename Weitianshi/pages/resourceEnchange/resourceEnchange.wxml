
<!--pages/resourceEnchange/resourceEnchange.wxml-->
<view id="resourceEnchange">
  <view class="offer">
    <view class="flex">
      <view class="title">可提供资源</view>
      <view class="title offerAdd" bindtap="offerAdd">自定义添加</view>
    </view>
    <view class="context flex">
      <block wx:for="{{enchange}}" wx:key="{{item.industry_id}}">
        <label class="tips">
          <view class="{{item.checked==true?'checkedOne':''}}" id="{{item.industry_id}}" data-index="{{index}}" data-value='{{item.industry_name}}' data-check="false" bindtap="checkboxChange">
            {{item.industry_name}}</view>
        </label>
      </block>
    </view>
  </view>
  <view class="search">
    <view class="flex">
      <view class="title">在寻求资源</view>
      <view class="title searchAdd" bindtap="searchAdd">自定义添加</view>
    </view>
    <view class="context flex">
      <block wx:for="{{target}}" wx:key="{{item.industry_id}}">
        <label class="tips">
          <view class="{{item.checked==true?'checkedOne':''}}" id="{{item.industry_id}}" data-index="{{index}}" data-value='{{item.industry_name}}' data-check="false" bindtap="checkboxChange2">
            {{item.industry_name}}</view>
        </label>
      </block>
    </view>
  </view>
  <view>
    <view class="describe">具体描述</view>
    <textarea placeholder="其他需求的描述,如:阿里系的创业团队我更亲睐" placeholder-style='color:#ccc' bindblur="bindTextAreaBlur" maxlength="30" value="{{describe}}" />
  </view>

  <!--错语提示-->
  <view class="error" wx:if="{{error=='1'}}">{{error_text}}</view>
  <!--发布项目-->
  <button class="nextBtn" bindtap="publish">
    发布项目
    <image class="rightArrow" src="../../../img/rightArrow.png"></image>
  </button>
</view>