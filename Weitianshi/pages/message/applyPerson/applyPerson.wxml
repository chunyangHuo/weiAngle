<import src="/pages/Template/Template.wxml" />
<view class="s_frame" hidden="{{contentList=='' || !contentList}}">
  <scroll-view scroll-y="true" scroll-top="{{scroll}}" bindscrolltolower="moreForApply" >
    <template is="allNumber" data="{{count:count,text:'申请查看我的项目'}}"></template>
    <template is="pushProject" data="{{contentList:contentList,type:0,record_id:record_id}}"></template>
  </scroll-view>
</view>
<!--没有更多-->
<view class="error" wx:if="{{error=='1'}}">{{error_text}}</view>
<!--没有数据-->
<view class="nullState" wx:if="{{contentList=='' || !contentList}}">
  <view class="nothing">没有数据</view>
</view>
