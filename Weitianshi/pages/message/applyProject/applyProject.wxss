/* pages/message/applyProject/applyProject.wxss */

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background: #fff;
}

.swiper-tab-list {
  display: inline-block;
  width: 50%;
  font-size: 26rpx;
  color: #999;
  line-height: 62rpx;
  text-align: center;
  border: none;
}

.on {
  color: #40587a;
  text-align: center;
  font-size: 26rpx;
  line-height: 80rpx;
  border-bottom: 4rpx solid #40587a;
}

.empty {
  padding-top: 92rpx;
  width: 252rpx;
  height: 190rpx;
}

.browseMeTitle {
  /*height: 90rpx;*/
  margin: 32rpx 32rpx 32rpx 32rpx;
}

.browseMeTitle .num {
  font-size: 24rpx;
  color: #666;
  line-height: 24rpx;
  text-align: right;
}

.title {
  font-size: 26rpx;
  color: #333;
  line-height: 26rpx;
  text-align: left;
}

.title .block {
  background: #40587a;
  width: 4rpx;
  height: 24rpx;
  margin-right: 12rpx;
}

/*名片*/

.outBox {
  margin: 16px 16px 0 16px;
  width: auto;
  height: auto;
}

.insideBox {
  padding: 32rpx 32rpx 24rpx 32rpx;
  background: #fff;
}

.describle {
  font-size: 34rpx;
  color: #666;
  line-height: 34rpx;
  text-align: left;
  margin-bottom: 36rpx;
}

.allIndustry {
  font-size: 26rpx;
  color: #40587a;
  line-height: 26rpx;
  text-align: left;
  margin-bottom: 24rpx;
}

.projectDetailLine {
  padding: 0 16rpx;
  border-right: 1rpx solid #999;
}

.otherInfo {
  position: relative;
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.others_pic {
  width: 40rpx;
  height: 40rpx;
  display: block;
  background: black;
  margin-right: 16rpx;
}

.projectDetailLine:first-child {
  padding-left: 0;
}

.projectDetailLine:last-child {
  border-right: none;
}

.allProjectDetail {
  font-size: 26rpx;
  color: #666;
  line-height: 26rpx;
  text-align: left;
  margin-bottom: 34rpx;
}

.userInfo {
  width: 460rpx;
  margin-top: 9rpx;
}

.userCompany, .userCareer, .userName {
  font-size: 22rpx;
  color: #999;
  line-height: 22rpx;
  text-align: left;
  width: 320rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.userCareer, .userName {
  margin-right: 16rpx;
  white-space: nowrap;
  width: auto;
  text-overflow: clip;
  overflow: none;
}

.projectInfo {
  height: 72rpx;
  position: relative;
}

.seeNum, .haveInterest {
  font-size: 24rpx;
  color: #666;
  line-height: 24rpx;
  text-align: left;
  margin-top: 34rpx;
}

.haveInterest {
  margin-left: 388rpx;
  color: #999;
}

.btnHaveInterest, .btnNoInterest {
  font-size: 24rpx;
  color: #40587a;
  border: 1px solid black;
  height: 52rpx;
  line-height: 52rpx;
  padding: 0 32rpx;
  margin: 20rpx 24rpx 0 185rpx;
}

.btnNoInterest {
  margin: 20rpx 0 0 0;
}

#time {
  font-size: 20rpx;
  color: #999;
  line-height: 20rpx;
  text-align: right;
  margin: 8rpx 0 20rpx 0;
}

/*==========我申请查看的项目===============  */

.apply {
  font-size: 24rpx;
  color: #40587a;
  line-height: 24rpx;
  position: absolute;
  top: 34rpx;
  right: 20rpx;
}

/*=============================  */

.applyMyProject {
  padding: 32rpx;
  background: white;
}

.outsideBox {
  margin: 0 30rpx;
  position: relative;
}

#introduce {
  background: #fafafa;
  border-radius: 4rpx 4rpx 0 0;
  font-size: 26rpx;
  color: #666;
  line-height: 88rpx;
  text-align: left;
  height: 88rpx;
  margin-left: 56rpx;
}

.applyMyProject .userPosition {
  font-size: 28rpx;
  color: #666;
  line-height: 28rpx;
  text-align: left;
  margin-right: 16rpx;
}

.introduceBox {
  margin-bottom: 16rpx;
  align-items: flex-end;
}

.introduceBox .userName {
  font-size: 36rpx;
  color: #333;
  line-height: 36rpx;
  text-align: left;
  margin-right: 16rpx;
  align-items: flex-end;
}

.applyMyProject .userPart {
  font-size: 20rpx;
  color: #d3b987;
  line-height: 20rpx;
  text-align: left;
}

.applyMyProject .userCompany {
  font-size: 24rpx;
  color: #999;
  line-height: 24rpx;
  text-align: left;
  margin-bottom: 84rpx;
}

.investmentGroup, .roundGroup {
  font-size: 26rpx;
  color: #999;
  line-height: 26rpx;
  text-align: left;
  margin-bottom: 24rpx;
}

.roundGroup {
  margin-bottom: none;
  border-bottom: 1rpx solid #e6e6e6;
  padding-bottom: 28rpx;
}

.agreeBtn, .refuseBtn {
  font-size: 28rpx;
  color: #40587a;
  line-height: 28rpx;
  text-align: left;
  margin-left: 16rpx;
}

.agreeBox {
  padding-left: 94rpx;
}

.refuseBox {
  padding-left: 88rpx;
  padding-right: 122rpx;
  border-right: 1rpx solid #e6e6e6;
}

.iconStyle {
  width: 24rpx;
  height: 26rpx;
  border-radius: 100%;
}

.agreed {
  font-size: 28rpx;
  color: #40587a;
  letter-spacing: 0;
  line-height: 28rpx;
  text-align: left;
}

.renzheng {
  width: 24rpx;
  height: 24rpx;
  margin-right: 4rpx;
}

.userPart1 {
  margin-top: 4rpx;
}

.connection {
  width: 68rpx;
  height: 68rpx;
  position: absolute;
  right: 0;
}

.userPic {
  width: 104rpx;
  height: 104rpx;
  border-radius: 100%;
  background: black;
  position: absolute;
  right: 32rpx;
  top: 32rpx;
}

.redPoint {
  background: #f44c4c;
  width: 16rpx;
  height: 16rpx;
  border-radius: 100%;
  position: absolute;
  top: 16rpx;
  left: 16rpx;
}

.hasNothing {
  font-size: 30rpx;
  color: #666;
  line-height: 30rpx;
  text-align: center;
}
.noData{
  width:144rpx;
  height:88rpx;
  margin-bottom: 38rpx;
  /* margin-top:344rpx; */
}
