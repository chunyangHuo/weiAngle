<import src="/pages/Template/Template.wxml" />
<view class="box">
  <view class="flex">
    <input class="searchSth" />
    <view class="cancel">取消</view>
  </view>
</view>

<view class="swiper-tab">
  <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">综合</view>
  <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">投资机构</view>
  <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">投资领域</view>
  <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">机构成员</view>
</view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:945rpx" bindchange="bindChange">
  <swiper-item data-current='0'>
    <scroll-view style="height:100%;" scroll-y="true">
      <view class="outStyleBox">
        <view class="blockTitle">成员</view>
        <block wx:for="{{memberList}}" wx:key="{{index}}">
          <view class="memberInfo flex">
            <view class="memberInfoLeft"></view>
            <view class="memberInfoRight">
              <view class="flex memberInfoTop">
                <view class="memberName">{{memberList.member_name}}</view>
                <view class="memberTitle">{{memberList.member_position}}</view>
              </view>
              <view class="flex memberCompany">
                <label>杭州投着乐网络科技有限公司</label> · <label>联合创始人</label>
              </view>
              <view class="memberDes">{{memberList.member_introduce}}</view>
            </view>
          </view>
        </block>
      </view>
    </scroll-view>
  </swiper-item>
  <swiper-item data-current='1'>
    <scroll-view style="height:100%;" scroll-y="true">
    </scroll-view>
  </swiper-item>
  <swiper-item data-current='2'>
    <scroll-view style="height:100%;" scroll-y="true">
    </scroll-view>
  </swiper-item>
  <swiper-item data-current='3'>
    <scroll-view style="height:100%;" scroll-y="true">

    </scroll-view>
  </swiper-item>
</swiper>