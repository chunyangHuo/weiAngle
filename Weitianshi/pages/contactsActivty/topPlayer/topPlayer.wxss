/* pages/contactsActivty/topPlayer/topPlayer.wxss */

#explain {
  background: rgba(255, 241, 232, 0.80);
  width: 95.7%;
  height: 80rpx;
  font-size: 28rpx;
  color: #666;
  letter-spacing: 0;
  line-height: 80rpx;
  text-align: left;
  padding-left: 32rpx;
}

page {
  background: #f3f4f8;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background: #fff;
}

.swiper-tab-list {
  display: inline-block;
  width: 50%;
  font-size: 26rpx;
  color: #999;
  line-height: 62rpx;
  text-align: center;
  border: none;
}

.on {
  color: #40587a;
  text-align: center;
  font-size: 26rpx;
  line-height: 80rpx;
  border-bottom: 4rpx solid #40587a;
}

.littleBox {
  background: #fff;
  border-radius: 8rpx;
  width: 208rpx;
  height: 104rpx;
  margin-top: 32rpx;
  margin-left: 32rpx;
}

.number {
  font-size: 28rpx;
  color: #333;
  letter-spacing: 0;
  line-height: 28rpx;
  text-align: left;
  margin-top: 20rpx;
  margin-bottom: 16rpx;
}

.ranking {
  font-size: 20rpx;
  color: #666;
  letter-spacing: 0;
  line-height: 20rpx;
  text-align: left;
  margin-bottom: 20rpx;
}

/*用户信息  */

.infoLeft {
  height: 122rpx;
  width: 122rpx;
  border-radius: 50%;
  margin-right: 22rpx;
}

.userName {
  font-size: 32rpx;
  color: #333;
  line-height: 32rpx;
  text-align: left;
  margin-bottom: 24rpx;
}

.userCompany, .userPosition {
  font-size: 24rpx;
  color: #666;
  line-height: 24rpx;
  text-align: left;
  margin-bottom: 16rpx;
}

.infoBox {
  height: 122rpx;
  background: #fff;
  padding: 32rpx;
  position: relative;
}

.refuse {
  opacity: 0.8;
  font-size: 20rpx;
  color: #ccc;
  letter-spacing: 0;
  line-height: 48rpx;
  text-align: left;
  border: 1rpx solid #999;
  border-radius: 100rpx;
  width: 118rpx;
  height: 48rpx;
}

.addPersonBtn {
  background: #40587a;
  font-size: 20rpx;
  border-radius: 200rpx;
  color: #fff;
  padding: 14rpx 0;
  line-height: 20rpx;
  width: 120rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.addNetwork {
  position: absolute;
  right: 32rpx;
  top: 68rpx;
}

.personNum {
  color: #fc703e;
}

.firstFriend, .secondFriend {
  color: #999;
}

.totalNum {
  font-size: 24rpx;
  margin: 34rpx 32rpx 16rpx 32rpx;
  justify-content: space-between;
}

.rightBox {
  text-align: right;
}

/*战队样式  */

.brandName {
  font-size: 32rpx;
  color: #333;
  line-height: 32rpx;
  text-align: left;
  margin-bottom: 24rpx;
}

.representativeName {
  font-size: 24rpx;
  color: #666;
  line-height: 24rpx;
  text-align: left;
}

.brandPic {
  height: 120rpx;
  width: 120rpx;
  margin-right: 24rpx;
}

.backTo {
  width: 376rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  background: #fff;
  font-size: 28rpx;
  color: #40587a;
}

.expandMyContacts {
  background: #40587a;
  width: 376rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  font-size: 28rpx;
  color: #fff;
}

.bottomBtn {
  position: fixed;
  bottom: 0;
}

.others_nopic {
  margin-top: 0;
  font-size: 64rpx;
  color: #40587a;
  background: #f2f2f2;
  border-radius: 50%;
  line-height: 120rpx;
}

.headPic {
  height: 122rpx;
  width: 122rpx;
  border-radius: 50%;
  margin-right: 22rpx;
  display: inline-block;
  text-align: center;
}

.team_others_nopic {
  height: 120rpx;
  width: 120rpx;
  margin-right: 24rpx;
  text-align: center;
  line-height: 120rpx;
}

.team_logo {
  height: 120rpx;
  width: 120rpx;
  margin-right: 24rpx;
}
