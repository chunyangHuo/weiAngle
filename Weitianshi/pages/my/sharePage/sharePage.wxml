<import src="/pages/Template/Template.wxml" />
<scroll-view id="my" scroll-y="true">
  <!--我的名片-->
  <template is="userInfo" data="{{user:user,count:count,text:'加他为人脉'}}"></template>

  <!--个人描述-->
  <template is="userIntro" data="{{user:user}}"></template>

  <!--寻找案源-->
  <template is="InvestInfo" data="{{invest:invest}}"></template>

  <!--资源对接-->
  <template is="resourceInfo" data="{{resource:resource}}"></template>

  <!--他的项目库-->
  <template is="financingProject" data="{{project_info:project_info,text:'他的项目库',canEdit:canEdit}}"></template>

  <!--投资案例-->
  <template is="investProject" data="{{invest_case:invest_case,canEdit:canEdit}}"></template>

  <template is="forButton"></template>

  <!--我的人脉和加入人脉-->
<!--button——type = 0：好友关系或单项人脉；1：分享出去的页面，直接添加2：需要同通过申请去添加3：待处理的状态-->
  <view class="aboutNetwork flex" wx:if="{{button_type == 0 ||button_type == 4}}">
    <view bindtap="addNetwork">加人脉</view>
  </view>
    <view class="floatBtn flex waitPerson" wx:if="{{button_type==2}}">
    <button class="waitPersonBtn" style="background: #f2f2f2;color:#cccccc;">待验证</button>
  </view>
   <view class="floatBtn flex waitPerson" wx:if="{{button_type==3}}">
    <view class="waitPersonBtn" style="background: #f2f2f2;color:#cccccc;"  bindtap="addNetwork">同意添加</view>
  </view>
</scroll-view>