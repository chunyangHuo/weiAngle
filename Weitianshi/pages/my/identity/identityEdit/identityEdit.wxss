.visitCard {
  background: #fff;
  width: 91.5%;
  height: 34rpx;
  padding: 40rpx 32rpx;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.visitCardMessage {
  font-size: 32rpx;
  color: #333;
  line-height: 32rpx;
}

.pushIdCard {
  background: #ccc;
  border-radius: 4rpx;
  width: 56rpx;
  height: 44rpx;
}

.personListTile, .investListTile {
  font-size: 32rpx;
  color: #333;
}

.personListContent {
  font-size: 28rpx;
  color: #ccc;
  text-align: right;
  margin-right: 12rpx;
}

.userBox, .investBox {
  width: 100%;
  height: 114rpx;
  background: #fff;
  line-height: 114rpx;
}

.userNameContent, .userPhoneContent, .userBrandContent, .userCompanyContent,
.userPositionContent, .userEmailContent, .userDescribeContent, .investContent {
  justify-content: space-between;
  margin: 2rpx 32rpx;
  border-bottom: 1rpx solid #e6e6e6;
}

.userDescribeContent {
  border-bottom: none;
}

.arrowStyle {
  margin-top: 47rpx;
  width: 12rpx;
  height: 20rpx;
}

.investContent:last-child {
  border: none;
}

.choice {
  margin: 28rpx 0 152rpx 0;
}

/*提示  */

.point {
  font-size: 24rpx;
  color: #666;
  letter-spacing: 0;
  line-height: 94rpx;
  text-align: left;
  height: 94rpx;
  margin-left: 36rpx;
}

.btn {
  height: 88rpx;
  width:100%;
  background: #40587a;
  font-size: 32rpx;
  color: #fff;
  line-height: 88rpx;
  text-align: center;
  position:fixed;
  top:1126rpx;
}
